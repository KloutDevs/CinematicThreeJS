---
interface Props {
  title?: string;
}

const { title = "Cinematic Experience" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="ThreeJS Cinematic Experience" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Contenedor principal para el scroll virtual -->
    <main>
      <slot />
    </main>

    <style is:global>
      :root {
        --primary-color: #ffffff;
        --background-color: #000000;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        background-color: var(--background-color);
        color: var(--primary-color);
        font-family: system-ui, sans-serif;
      }

      body {
        min-height: 100vh;
        overflow-x: hidden;
      }

      main {
        position: relative;
        z-index: 1;
      }

      #overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
        pointer-events: none; 
      }

      /* Estilos para el canvas de ThreeJS */
      canvas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
      }

      /* Ocultar scrollbar pero mantener funcionalidad */
      body {
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE and Edge */
      }

      body::-webkit-scrollbar {
        display: none; /* Chrome, Safari and Opera */
      }

      /* Prevenir selección de texto durante la animación */
      .no-select {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      /* Asegurar que las imágenes no se arrastren */
      img {
        pointer-events: none;
        -webkit-user-drag: none;
        -moz-user-drag: none;
        -ms-user-drag: none;
      }
    </style>
  </body>
</html>